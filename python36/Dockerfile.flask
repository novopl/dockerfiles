FROM python:3.6-slim

RUN mkdir /app
WORKDIR /app

COPY files/flask_requirements.txt /tmp/flask_requirements.txt

RUN apt-get update \
    && apt-get install -y --no-install-recommends gcc libc6-dev zsh \
    && rm -rf /var/lib/apt/lists/* \
    && pip install -r /tmp/flask_requirements.txt \
    && apt-get purge -y --auto-remove gcc libc6-dev

CMD /bin/bash
